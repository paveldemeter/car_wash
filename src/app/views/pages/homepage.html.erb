          <p class="subtitle">Top tile</p>
        </article>
        <article class="tile is-child notification has-background-black">
          <p class="button is-large is-fullwidth is-primary is-inverted is-outlined is-rounded button"><%= link_to 'Sign In', new_user_session_path %></p>
          <p class="subtitle">Bottom tile</p>
        </article>
      </div>
