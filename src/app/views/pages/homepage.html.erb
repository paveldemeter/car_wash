    <div class="tile is-ancestor">
  <div class="tile is-vertical is-12">
    <div class="tile">
      <div class="tile is-parent is-vertical ">
        <article class="tile is-child notification has-background-black">
          <p class="button is-large is-fullwidth is-primary is-inverted is-outlined is-rounded button"><%= link_to 'Sign Up', new_user_registration_path %></p>  <p class="button is-large is-fullwidth is-primary is-inverted is-outlined is-rounded button"><%= link_to 'Sign Out', destroy_user_session_path, method: 'delete' %></p>
